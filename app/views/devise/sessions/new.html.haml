.sign-in-panel
  %h2.text-center ログイン
  .panel.panel-default
    .panel-body.sign-in-panel__body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true
          = f.input :password, required: false
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, '', class: 'btn btn-default btn-block'
      = link_to 'Googleアカウントでログイン', user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-danger btn-block sign-in-panel__oauth-button'
