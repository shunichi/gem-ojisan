- if user_signed_in?
  %li.dropdown
    = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
      = fa_icon('user', text: current_user.name)
      %span.caret
    %ul.dropdown-menu
      %li= link_to fa_icon('pencil-square-o fw', text: 'アカウント情報'), edit_user_registration_path
      %li= link_to fa_icon('sign-out fw', text: 'ログアウト'), destroy_user_session_path, method: :delete
- else
  %li= link_to 'サインアップ', new_user_registration_path
  %li= link_to fa_icon('sign-in', text: 'ログイン'), new_user_session_path
